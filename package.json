{
  "name": "devfunding-tests",
  "version": "1.0.0",
  "description": "Run unit tests on this project.",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:report": "vitest run -- --coverage --costs",
    "test:core": "vitest run tests/contracts/core.test.ts",
    "test:token": "vitest run tests/contracts/token.test.ts",
    "test:escrow": "vitest run tests/contracts/escrow.test.ts",
    "test:all": "vitest run tests/contracts/*.test.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "pre-commit": "npm run lint && npm run format:check",
    "deploy": "npx tsx scripts/deploy.ts",
    "deploy:mainnet": "STACKS_NETWORK=mainnet npx tsx scripts/deploy.ts",
    "deploy:simnet": "STACKS_NETWORK=simnet npx tsx scripts/deploy.ts",
    "verify": "npx tsx scripts/verify-deployment.ts",
    "verify:core": "npx tsx scripts/verify-deployment.ts core",
    "verify:token": "npx tsx scripts/verify-deployment.ts token",
    "verify:escrow": "npx tsx scripts/verify-deployment.ts escrow",
    "interact": "npx tsx scripts/interact-examples.ts",
    "interact:profile": "npx tsx scripts/interact-examples.ts profile",
    "interact:grant": "npx tsx scripts/interact-examples.ts grant",
    "interact:bounty": "npx tsx scripts/interact-examples.ts bounty",
    "interact:mint": "npx tsx scripts/interact-examples.ts mint",
    "generate-abi": "npx tsx scripts/generate-abi.ts"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@stacks/clarinet-sdk": "^3.14.0",
    "@stacks/clarity-sdk": "^2.0.0",
    "@stacks/transactions": "^7.2.0",
    "@types/node": "^24.4.0",
    "chokidar-cli": "^3.0.0",
    "dotenv": "^16.0.0",
    "tsx": "^4.0.0",
    "vitest": "^3.0.0",
    "vitest-environment-clarinet": "^3.0.2"
  }
}
